<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>HelloWorld</servlet-name>
        <servlet-class>ServletDemo.HelloWorld</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HelloWorld</servlet-name>
        <url-pattern>/HelloWorld</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletContextTest2</servlet-name>
        <servlet-class>ServletDemo.ServletContextTest2</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletContextTest2</servlet-name>
        <url-pattern>/Test3</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletContextTest3</servlet-name>
        <servlet-class>ServletDemo.ServletContextTest3</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletContextTest3</servlet-name>
        <url-pattern>/Test4</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletContextTest4</servlet-name>
        <servlet-class>ServletDemo.ServletContextTest4</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletContextTest4</servlet-name>
        <url-pattern>/Test5</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RequestMethodServlet</servlet-name>
        <servlet-class>ServletDemo.RequestMethodServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RequestMethodServlet</servlet-name>
        <url-pattern>/RequestMethodServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PrintServletTest</servlet-name>
        <servlet-class>ServletDemo.PrintServletTest</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PrintServletTest</servlet-name>
        <url-pattern>/PrintTest</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletConfigTest</servlet-name>
        <servlet-class>ServletDemo.ServletConfigTest</servlet-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletConfigTest</servlet-name>
        <url-pattern>/Test</url-pattern>
    </servlet-mapping>

    <context-param>
        <param-name>companyName</param-name>
        <param-value>itcast</param-value>
    </context-param>
    <context-param>
        <param-name>address</param-name>
        <param-value>nanjign</param-value>
    </context-param>
    <servlet>
        <servlet-name>ServletContextTest1</servlet-name>
        <servlet-class>ServletDemo.ServletContextTest1</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletContextTest1</servlet-name>
        <url-pattern>/Test2</url-pattern>
    </servlet-mapping>

</web-app>